{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "Compile Project",
            "name": "SwiftPM: Example - Debug (Cortex-Debug)",
            "cwd": "${userHome}/.pico-sdk/openocd/0.12.0+dev/scripts",
            "executable": "${workspaceFolder}/.build/armv7em-none-none-eabi/release/Example.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "serverpath": "${userHome}/.pico-sdk/openocd/0.12.0+dev/openocd.exe",
            "gdbPath": "${userHome}/.pico-sdk/toolchain/14_2_Rel1/bin/arm-none-eabi-gdb",
            "device": "RP2350",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2350.cfg"
            ],
            "svdFile": "${userHome}/.pico-sdk/sdk/2.2.0/src/rp2350/hardware_regs/RP2350.svd",
            "runToEntryPoint": "main",
            // Fix for no_flash binaries, where monitor reset halt doesn't do what is expected
            // also works fine for flash binaries
            "overrideLaunchCommands": [
               "monitor reset init",
               "load \"${workspaceFolder}/.build/armv7em-none-none-eabi/release/Example.elf\""
            ],
            "openOCDLaunchCommands": [
               "adapter speed 5000"
            ]
        },
        {
            "name": "SwiftPM: Example - Flash (picotool)",
            "request": "launch",
            "type": "lldb",
            "program": "/usr/bin/true", // Dummy program to satisfy cppdbg requirements
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Compile and Flash Project",
            "stopOnEntry": false
        },
    ]
}
